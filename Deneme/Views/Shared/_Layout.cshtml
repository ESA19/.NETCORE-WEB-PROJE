@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer localizer
<!DOCTYPE html>
<html lang="en">
<head>
    @RenderSection("Scripts", required: false)

    <!-- Basic -->
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <!-- Mobile Metas -->
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <!-- Site Metas -->
    <meta name="keywords" content="" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <link rel="shortcut icon" href="../Content/images/favicon.png" type="">

    <title> ESA HOSPITAL </title>

    <!-- bootstrap core css -->
    <link rel="stylesheet" type="text/css" href=@Url.Content("/Content/css/bootstrap.css") />

    <!-- fonts style -->
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700;900&display=swap" rel="stylesheet">

    <!--owl slider stylesheet -->
    <link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/assets/owl.carousel.min.css" />

    <!-- font awesome style -->
    <link href=@Url.Content("/Content/css/font-awesome.min.css") rel="stylesheet" />

    <!-- Custom styles for this template -->
    <link href=@Url.Content("/Content/css/style.css") rel="stylesheet" />
    <!-- responsive style -->
    <link href=@Url.Content("/Content/css/responsive.css") rel="stylesheet" />
</head>
<body class="sub_page">
    <div class="hero_area">
        <!-- header section strats -->
        <header class="header_section">
            <div class="container">
                <nav class="navbar navbar-expand-lg custom_nav-container ">
                    <a class="navbar-brand" href="index.html">
                        <span>
                            ESA HOSPITAL
                        </span>
                    </a>
                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                        <span class=""> </span>
                    </button>

                    <div class="collapse navbar-collapse" id="navbarSupportedContent">

                        <ul class="navbar-nav">
                            <li class="nav-item">
                                <a class="nav-link" href="/Home/Index">@localizer["Anasayfa"] </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/Home/Index/#about"> @localizer["Hakkımızda"]</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/Home/Index/#departments">@localizer["Departmanlar"]</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/Home/Index/#doctors">@localizer["Doktorlar"]</a>
                            </li>
                            @if (User.Identity.IsAuthenticated)
                            {
                                @if (User.IsInRole("Admin"))
                                {

                                    <li class="nav-item">
                                        <a class="nav-link" asp-area="" asp-controller="Department" asp-action="Create">@localizer["Departman Ekle"] </a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" asp-area="" asp-controller="Doctor" asp-action="Create">@localizer["Doktor Ekle"]</a>
                                    </li>
                                }
                                else
                                {

                                    <li class="nav-item">
                                        <a class="nav-link" asp-area="" asp-controller="Appointment" asp-action="@localizer["Randevu Al"]"></a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" asp-area="" asp-controller="Appointment" asp-action="Index">@localizer["Randevularım"]</a>
                                    </li>
                                }
                            }
                            <li class="nav-item">
                                <div>
                                    <partial name="_LoginPartial.cshtml" />
                                </div>
                            </li>
                        </ul>
                    </div>
                </nav>
            </div>
        </header>
        <!-- end header section -->
    </div>
   <div class="container"></div>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <!-- footer section -->
    <footer class="footer_section">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-2 col-lg-2 footer_col">
                    <div class="footer_contact">
                        <h4>
                            @localizer["İletişim"]
                        </h4>
                        <div class="contact_link_box">
                            <a href="">
                                <i class="fa fa-map-marker" aria-hidden="true"></i>
                                <span>
                                    Serdivan,Sakarya
                                </span>
                            </a>
                            <a href="">
                                <i class="fa fa-phone" aria-hidden="true"></i>
                                <span>
                                    (0254) 0101 25 02
                                </span>
                            </a>
                            <a href="">
                                <i class="fa fa-envelope" aria-hidden="true"></i>
                                <span>
                                    esahospitals@gmail.com  
                                </span>
                            </a>
                        </div>
                    </div>
                    <div class="footer_social">
                        <a href="">
                            <i class="fa fa-facebook" aria-hidden="true"></i>
                        </a>
                        <a href="">
                            <i class="fa fa-twitter" aria-hidden="true"></i>
                        </a>
                        <a href="">
                            <i class="fa fa-linkedin" aria-hidden="true"></i>
                        </a>
                        <a href="">
                            <i class="fa fa-instagram" aria-hidden="true"></i>
                        </a>
                    </div>
                </div>
              
                <div class="col-md-2 col-lg-2 mx-auto footer_col">
                    <div class="footer_link_box">
                        <h4>
                            @localizer["Linkler"]
                        </h4>
                        <div class="footer_links">
                            <a class="active" href="/Home/Index">
                                @localizer["Anasayfa"]
                            </a>
                            <a class="" href="/Home/Index/#about">
                                @localizer["Hakkımızda"]
                            </a>
                            <a class="" href="/Home/Index/#departments">
                                @localizer["Departmanlar"]
                            </a>
                            <a class="" href="/Home/Index/#doctors">
                                @localizer["Doktorlar"]
                            </a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="footer-info">
                <p>
                    &copy; <span id="displayYear"></span> @localizer["Her Hakkı Saklıdır"]
                    &copy; ESA HOSPITAL
                    
                </p>

            </div>
        </div>
    </footer>
    <!-- footer section -->
    <!-- jQery -->
    <script type="text/javascript" src="/Content/js/jquery-3.4.1.min.js"></script>
    <!-- popper js -->
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous">
    </script>
    <!-- bootstrap js -->
    <script type="text/javascript" src="/Content/js/bootstrap.js"></script>
    <!-- owl slider -->
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/owl.carousel.min.js">
    </script>
    <!-- custom js -->
    <script type="text/javascript" src="/Content/js/custom.js"></script>
    <!-- Google Map -->
    <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCh39n5U-4IoWpsVGUHWdqB6puEkhRLdmI&callback=myMap">
    </script>
    <!-- End Google Map -->
</body>
</html>
