@model IEnumerable<Deneme.Models.Doctor>

@{
    ViewData["Title"] = "Doktorlar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3>Doktorlar</h3>

<hr />
<div>
   <a asp-action="Create">Yeni Doktor Ekle</a>
</div>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DoctorName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Department)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DoctorName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Department.DepartmentName)
            </td>
            <td>
                <a asp-action="Edit"  class="btn btn-warning "asp-route-id="@item.DoctorId">Düzenle</a> |
                <a asp-action="Delete" class="btn btn-danger " asp-route-id="@item.DoctorId">Sil</a>
            </td>
        </tr>
}
    </tbody>
</table>
